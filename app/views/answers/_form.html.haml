= bootstrap_form_for([@question, @answer]) do |f|
  %fieldset
    = f.static_control label: t('.description') do
      = @question.description
    = f.static_control label: t('.query') do
      = @question.query
    = f.text_field :title
    = f.text_field :content
    = f.url_field :link

    .form-actions
      = f.button :submit, class: "btn-primary btn-xs", value: t('button.save')
      = link_to t('button.cancel'), :back, class: "btn btn-xs"
