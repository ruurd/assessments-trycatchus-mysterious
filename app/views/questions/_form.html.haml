= bootstrap_form_for(@question) do |f|
  %fieldset
    = f.static_control label: t('.user') do
      = current_user.email
    = f.text_field :description
    = f.text_field :query

    .form-actions
      = f.button :submit, class: "btn-primary btn-xs", value: t('button.save')
      = link_to t('button.cancel'), :back, class: "btn btn-xs"
