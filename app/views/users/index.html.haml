= render 'shared/index_header', name: User.model_name.human
%table.table.table-condensed.table-bordered
  %thead
    %tr
      = thsortable 'email', t('.email')
      = thsortable 'admin', t('.admin')
      %th
        %i.icon-flag
  %tbody
    -@users.each do |user|
      %tr
        = render 'row', :user => user
        %td
          = link_to t(:'button.show'), user_path(user), :class => "btn btn-xs"
          = link_to t(:'button.edit'), edit_user_path(user), :class => "btn btn-xs"
          = link_to t(:'button.destroy'), [user], :class => "btn btn-danger btn-xs", data: {confirm: t('alert.are_you_sure')}, method: :delete
= link_to t(:'button.add'), new_user_path, :class => "btn btn-xs btn-success"
